@import 'nib'

.likearts-content .footer-container
	width 100%
	height auto
	min-height 500px
	background-color #e0e0e0
	
.likearts-content .footer-container .footer
	padding 60px 0
	
.likearts-content .footer-container .white-label
	width 100%
	height auto
	min-height 100px
	@extend .flex, .paper-shadow-z1
	background-color #FFF
	padding 20px
	text-align center
	margin-bottom 60px
	
.likearts-content .footer-container .white-label__link
	font-size 3rem
	font-weight 300
	color $primary-color-text
	@media screen and (max-width: $tablet)
		font-size 2.4rem
	@media screen and (max-width: $phone)
		font-size 2rem
		
.likearts-content .footer-container .footer-menu--desktop
	@extend .flex
	justify-content space-between
	align-items baseline
	@media screen and (max-width: $phone)
		display none
		
.likearts-content .footer-container .footer-menu__title
	font-size 1.8rem
	font-weight 700
	text-transform uppercase
	margin-bottom 20px
	
.likearts-content .footer-container .footer-menu-links__item
	display block
	color $primary-color-text
	font-size 1.5rem
	margin 10px 0
	&:hover
		text-decoration underline
		
.likearts-content .footer-container .footer-menu__column--mobile
	@media screen and (max-width: $tablet)
		display none

.likearts-content .footer-container .buy-btn
	width 100%
	height auto
	padding 15px
	background-color $primary-color
	text-align center
	color #FFF
	text-transform uppercase
	font-size 1.4rem
	margin-bottom 30px
	
.likearts-content .footer-container .btn-link
	&:hover
		text-decoration none
	&:active
		text-decoration none
	&:focus
		text-decoration none
	@media screen and (max-width: $notebook)
		display none
		
.likearts-content .footer-container .col-sm-12-override
	@media screen and (max-width: $notebook)
		width 100%
	
.likearts-content .footer-container .contacts__item
	text-align right
	margin 10px 0
	
.likearts-content .footer-container .mail-link
	color $primary-color-text
	text-decoration underline
	font-size 1.5rem
	
.likearts-content .footer-container .contacts__item--adress
	text-decoration underline
	
.likearts-content .footer-container .copyright
	text-align right
	font-size 1.3rem
	color #aeaeae
	
	
	
	
	
	
	
	
	
	
	
	