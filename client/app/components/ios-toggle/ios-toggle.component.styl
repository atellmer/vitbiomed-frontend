@import 'nib'

.likearts-content .ios-toggle
	position relative
	width 45px
	height 25px
	background-color $primary-color
	border-radius 25px
	padding 2px
	cursor pointer
	transition all .2s ease-in-out

	&__circle
		position absolute
		top 2px
		width 21px
		height 21px
		border-radius 50%
		background-color #fff

.likearts-content .js-ios-toggle--inactive
	background-color #c6c6c6

.likearts-content .ios-toggle .js-ios-toggle__circle--slide-right
	animation toggle-slide-right .2s 1 ease-in-out
	transform: translate(100%, 0)

@keyframes toggle-slide-right{
	0%{
		transform: translate(0, 0) scale(1.3, 1)
	}
	100%{
		transform: translate(100%, 0)  scale(1, 1)
	}
}

.likearts-content .ios-toggle .js-ios-toggle__circle--slide-left
	animation toggle-slide-left .2s 1 ease-in-out
	transform: translate(0, 0)

@keyframes toggle-slide-left{
	0%{
		transform: translate(100%, 0) scale(1.3, 1)
	}
	100%{
		transform: translate(0, 0)  scale(1, 1)
	}
}