@import 'nib'

.likearts-content .course-item-page-container
	padding 50px 0
	@media screen and (max-width: $phone)
		padding 0

	/*block*/
	.product-card
		width 100%
		max-width 800px
		@media screen and (max-width: $phone)
			max-width none

		/*element*/
		&__title
			font-size 4rem
			line-height 1.2
			padding 10px 0
			margin 0
			@media screen and (max-width: $tablet)
				font-size 3.2rem
			@media screen and (max-width: $phone)
				font-size 2.1rem
				padding 5px 0
				text-align center

				/*modificators*/
				&--accent
					color #f44336

		/*element*/
		&__subtitle
			font-size 2rem
			padding 10px 0
			margin 0
			@media screen and (max-width: $tablet)
				font-size 1.8rem
			@media screen and (max-width: $phone)
				font-size 1.4rem
				padding 0
				text-align center

		/*element*/
		&__picture
			@media screen and (max-width: $phone)
				width 50%
				margin 0 auto
			

		/*element*/
		&__picture-container
			margin 40px 0
			@media screen and (max-width: $phone)
				margin 10px 0

	/*block*/
	.product-description
		@media screen and (max-width: $phone)
			margin 40px 0

		/*element*/
		&__title
			font-size 2.4rem
			font-weight 300
			margin 20px 0
			@media screen and (max-width: $tablet)
				font-size 2.2rem
			@media screen and (max-width: $phone)
				margin 10px 0

		/*element*/
		&__content
			display none
			font-size 1.5rem
			font-weight 300
			margin 0 0 20px 0
			@media screen and (max-width: $phone)
				font-size 1.3rem
			@media screen and (max-width: $phone)
				margin  0 0 40px 0

			/*modificators*/
			&--active
				display inherit

		/*element*/
		&__items
			@extend .flex
			flex-flow row nowrap
			justify-content space-between
			align-items stretch
			@media screen and (max-width: 1200px)
				flex-flow row wrap
				justify-content flex-start

		/*element*/
		&__item
			@extend .flex
			flex-flow column wrap
			justify-content space-between
			margin 10px
			text-align center
			@media screen and (max-width: 1200px)
				width 25%

		/*element*/
		&__pic 
			@media screen and (max-width: 1200px)
				max-width 80%

		/*element*/
		&__link
			margin 20px 0
			font-size 1.3rem
			@media screen and (max-width: $tablet)
				font-size 1.2rem

		/*element*/
		&__warning
			font-size 2rem
			margin 40px 0 0 0
			font-weight 300
			@media screen and (max-width: $phone)
				display none
			

	/*block*/
	.phone-padding
		@media screen and (max-width: $phone)
			padding 0 15px
	
	/*block*/
	.info-block
		position relative
		@media screen and (max-width: $phone)
			display none

		/*element*/
		&__container
			margin 75px 0 0 0
			width 100%

		/*element*/
		&__phone
			text-align right
			color #898989
			font-weight 500
			padding 10px 0

		/*element*/
		&__discount
			font-size 1.8rem
			font-weight 500
			color $primary-color-text
			margin-top 35px

		/*element*/
		&__discount-link
			display block
			margin 40px 0
			font-size 1.8rem

		/*element*/
		&__discount-icon
			position relative
			top 1px
			right 3px
			font-size 1.3rem

		&__strike
			color #f54f43

	/*block*/
	.control-card
		position relative
		width 100%
		height auto
		@extend .paper-shadow-z1

		/*element*/
		&__header
			@extend .flex
			background-color #383838
			color #FFF
			width 100%
			height auto
			min-height 140px
			font-size 3.2rem
			@media screen and (max-width: $phone)
				display none

		/*element*/
		&__body
			padding 40px
			@media screen and (max-width: $tablet)
				padding 20px
	
	/*block*/
	.buy-btn
		position relative
		width 100%
		height auto
		padding 15px
		background-color $primary-color
		text-align center
		color #FFF
		text-transform uppercase
		font-size 1.4rem
		cursor pointer
		user-select none

		/*modificators*/
		&--phone
			position relative
			user-select none
			font-size 1.6rem
			margin 30px 0
			@media screen and (max-width: $phone)
				margin 5px 0
	/*block*/
	.btn-container
		padding 0 15px
	
	/*block*/
	.price-label
		width 100%
		height auto
		min-height 30px
		background-color #383838
		margin 20px 0
		@extend .flex
		justify-content space-around
		color #FFF
		padding 10px 15px

	/*block*/
	.flex-container
		padding 0 15px
		height auto
		@extend .flex
		flex-flow row-reverse wrap
		justify-content center
		margin 0 0 25px 0
	
	/*block*/
	.flex-item
		height 100%
	
	/*block*/
	.vertical-divider
		width 1px
		height 140px
		margin 0 15px
		background-color $primary-color
	
	/*block*/
	.sum-block
		padding 0 15px
		@media screen and (max-width: 360px)
			padding 0
	
		/*element*/
		&__price
			font-size 2.1rem
			font-weight 700
			text-align center
			position relative
			top -15px
			text-align right
			@media screen and (max-width: 360px)
				font-size 1.5rem

		/*element*/
		&__price-description
			font-size 1.1rem
			font-weight 500
		
		/*element*/
		&__discount
			text-align center
			font-weight 300
			color $primary-color
			font-size 1.4rem
			margin 30px 0 0 0
			max-width 100px
			@media screen and (max-width: 360px)
				font-size 1rem

		/*element*/
		&__strike
			color #f54f43
			font-size 1.2rem

	/*block*/
	.note
		margin 30px 0
		@extend .flex
		align-items flex-start
		@media screen and (max-width: $phone)
			display none

		/*element*/
		&__icon
			display block
			width 16px
			height 16px
			@extend .cover 
			background-image: url(../resources/icons/note.svg)
			margin 0 10px 0 0

		/*element*/
		&__text
			display block
			width 90%

	/*block*/
	.faq
		margin 60px 0 30px 0

		/*element*/
		&__title
			font-size 2.4rem
			margin 0 0 40px 0
			@media screen and (max-width: $phone)
				font-size 2.2rem
				margin 0 0 10px 0

		/*element*/
		&__item 
			margin 20px 0
			font-size 1.5rem
			@media screen and (max-width: $phone)
				font-size 1.3rem

		/*element*/
		&__item-title
			color $primary-color
			border-color $primary-color

		/*element*/
		&__item-content
			display none
			margin 20px 0

	/*block*/
	.testimonials
		margin 60px 0 30px 0
		@media screen and (max-width: $phone)
			margin 40px 0 30px 0

		/*element*/
		&__title
			font-size 2.4rem
			margin 0 0 30px 0
			@media screen and (max-width: $phone)
				font-size 2.2rem
				margin 0 0 10px 0

		/*element*/
		&__items
			@extend .flex 
			flex-flow column wrap
			align-items flex-start

		/*element*/
		&__item 
			margin 20px 0
			font-size 1.5rem
			@extend .flex 
			align-items flex-start
			@media screen and (max-width: $phone)
				font-size 1.3rem
				margin 10px 0

		/*element*/
		&__pic
			margin 0 20px 0 0 
			@media screen and (max-width: $phone)
				display none

		/*element*/
		&__username
			color $primary-color
			font-size 1.5rem
			margin 0 0 10px 0
			@media screen and (max-width: $phone)
				font-size 1.3rem
				margin 0

		/*element*/
		&__text
			font-size 1.5rem
			@media screen and (max-width: $phone)
				font-size 1.3rem

		&__link
			margin 30px 0 0 60px
			@media screen and (max-width: $phone)
				margin 30px 0 0 0
			

	/*override*/
	.col-xxs-override
		@media screen and (max-width: $phone)
			width 100%
			margin 0
			padding 0

	.col-md-offset-2-override
		@media screen and (min-width: 992px)
			margin-left 12%
		
	.col-md-3-override
		@media screen and (min-width: 992px)
			width 27%
		
	.col-md-7-override
		@media screen and (min-width: 992px)
			width 61%
	
