@import 'nib'

.likearts-content .select-product--phone
	padding 0 15px
	@media screen and (max-width: 360px)
		padding 0

.likearts-content .select-product__title
	text-align center
	color $secondary-color-text
	text-transform uppercase
	font-size 1rem
	letter-spacing 2px
	
.likearts-content .select-product__items
	@extend .flex
	margin-bottom 20px
	@media screen and (max-width: $phone)
		margin-bottom 10px
	
.likearts-content .js-select-product__item
	font-size 1.5rem
	font-weight 700
	margin 10px 20px
	cursor pointer
	@media screen and (max-width: $tablet)
		margin 10px
	
.likearts-content .js-select-product__item--active
	color $primary-color
	
.likearts-content .amount-control
	@extend .flex
	padding 20px 0
	
.likearts-content .amount-control--phone
	@media screen and (max-width: $phone)
		padding 20px 0 0 0
	
.likearts-content .amount-control__btn
	position relative
	width 30px
	height 30px
	cursor pointer
	
.likearts-content .amount-control__btn--minus
	background-color #c6c6c6
	
.likearts-content .amount-control__btn--plus
	background-color $primary-color
	
.likearts-content .amount-control__counter
	width auto
	min-width 30px
	height 30px
	font-size 1.6rem
	@extend .flex
	padding 0 3px
	
.likearts-content .amount-control__icon
	color #FFF
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	


