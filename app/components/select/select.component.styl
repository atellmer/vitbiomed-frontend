@import 'nib'


.likearts-content .vit-select
	width 100%

	&__btn
		position relative
		width 100%
		height auto
		padding 20px
		background-color #fff
		text-align center
		text-transform uppercase
		font-size 1.4rem
		font-weight 700
		cursor pointer
		z-index 1
		color $primary-color
		@extend .paper-shadow-z1

	&__icon
		position absolute
		top 50%
		right 20px
		transform translate(0, -50%)
		color $primary-color-text

	&__items
		display none
		position absolute
		top 0
		width 100%
		height auto
		text-align center
		text-transform uppercase
		font-size 1.4rem
		font-weight 700
		z-index 9
		@extend .paper-shadow-z1

	&__item
		background-color #fff
		padding 20px
		cursor pointer
		border-bottom 1px solid #c0c0c0


.likearts-content .vit-select .js-vit-select__items--active
	display inherit
	animation select-motion 0.2s 1 ease-in-out

.likearts-content .vit-select .js-vit-select__item--active
	color $primary-color

@keyframes select-motion{
	0%{
		opacity 0
		transform scale(1, 0)
	}
	100%{
		opacity 1
		transform scale(1, 1)
	}
}