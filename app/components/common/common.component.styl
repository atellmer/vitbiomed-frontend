@import 'nib'
@import url(../resources/fonts/fonts.css)
@import url(../resources/icons/sprite/sprite.css)

$bg-color = #FFF
$primary-color = #689f38
$primary-color-text = #383838
$secondary-color-text = #898989

$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1340px
$container-width-large = 1720px


//helpers
.no-padding
	padding 0!important
	margin 0!important
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)!important
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)!important
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)!important
	
.divider
	height 1px
	width 100%
	border-top 1px solid #E0E0E0
	
.cover
	background-position center
	background-repeat no-repeat
	background-size cover
	
.flex
	display flex
	flex-flow row nowrap
	justify-content center
	align-items center
	
.display-hide
	display none!important
	
.display-show
	display inherit!important
	
.transition
	transition all .2s ease-in-out
	
.cursor-pointer
	cursor pointer
	
.tablet-visible
	position relative
	display none
	@media screen and (max-width: $tablet)
		display inherit
		
.phone-visible
	position relative
	display none
	@media screen and (max-width: $phone)
		display inherit
		
.text-black
	color $primary-color-text
		
.likearts-content
	font-family 'MyseoSansCyrl'
	background $bg-color
	color $primary-color-text
	font-weight 500
	
p
	margin 0 0 25px 0

a
	&:hover
		outline none
		text-decoration none
	&:active
		outline none
		text-decoration none
	&:focus
		outline none
		text-decoration none
		
.likearts-content .container-fluid
	padding 0
	margin 0
		
.likearts-content .container
	width 100%
	max-width $container-width
	margin 0 auto
	@media screen and (min-width: 1700px)
		max-width $container-width-large
	@media screen and (max-width: $notebook)
		padding 0 40px
	@media screen and (max-width: $phone)
		padding 0

.likearts-content .link
	color $primary-color-text
	@extend .transition
	&:hover
		color $primary-color

	&--underline
		border-bottom 1px solid $primary-color-text
		&:hover
			border-bottom 1px solid $primary-color

.likearts-content .text-dashed
	border-bottom 1px dashed $primary-color-text
	&--green
		border-bottom 1px dashed $primary-color

