@import 'nib'

.likearts-content .header-container
	border-bottom 1px solid #eee
	@media screen and (max-width: $phone)
		border none

.likearts-content .header-container .header
	position relative
	width 100%
	height auto
	z-index 99
	@media screen and (max-width: 992px)
		padding 20px 0
	@media screen and (max-width: $tablet)
		padding 0
	@media screen and (max-width: $phone)
		background-color $primary-color
		padding 0
		min-height 62px
		
.likearts-content .header-container .flex-container
	width 100%
	height auto
	min-height 100px
	@extend .flex
	justify-content space-between
	align-items stretch
	padding 0 15px
	@media screen and (max-width: 992px)
		flex-flow column wrap
		justify-content center
		align-items center
	@media screen and (max-width: $phone)
		min-height 62px
		
.likearts-content .header-container .flex-item 
	@extend .flex

.likearts-content .header-container .logo-link
	display inline-block
	position relative
	@media screen and (max-width: 992px)
		left 50%
		transform translateX(-50%)
		
	
.likearts-content .header-container .logo
	width 207px
	height 36px
	background-image url(../resources/img/logo--g.svg)
	@extend .cover
	@media screen and (max-width: $phone)
		background-image url(../resources/img/logo--w.svg)
		width 138px
		height 24px

.likearts-content .header-container .menu-desktop
	margin 0 20px
	@media screen and (max-width: 992px)
		margin 5px
	@media screen and (max-width: $tablet)
		display none
	
.likearts-content .header-container .menu-desktop-list
	list-style-type none
	margin 0
	@extend .flex
	justify-content flex-end
	flex-wrap wrap
	@media screen and (max-width: 1350px)
		justify-content flex-start
	@media screen and (max-width: 1200px)
		padding 0
	@media screen and (max-width: 992px)
		justify-content center
	
		
.likearts-content .header-container .menu-desktop-list__item
	margin 0 20px
	@media screen and (max-width: 1350px)
		margin 0 10px
	
		
.likearts-content .header-container .menu-desktop-list__link
	display inline-block
	padding 5px 0
	text-transform uppercase
	color $primary-color-text
	font-weight 500
	font-size 1.5rem
	letter-spacing 2px
	@extends .transition
	&:hover
		color $primary-color
	@media screen and (max-width: 1200px)
		font-size 1.3rem
	
.likearts-content .header-container .menu-desktop-list__link--active
	color $primary-color
	
.likearts-content .header-container .phone
	color $secondary-color-text
	font-size 1.5rem
	@media screen and (max-width: 1200px)
		font-size 1.3rem
	

